@model List<Dealermotor.Models.Motor>
@{
    ViewData["Title"] = "Katalog Motor";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<div class="row mt-4">
    <div class="col-12">
        <h2><i class="fas fa-motorcycle"></i> Katalog Motor</h2>
        <p class="text-muted">Jelajahi koleksi motor kami dan temukan motor impian Anda! üèçÔ∏è</p>
    </div>
</div>

<!-- Search & Filter -->
<div class="row mb-4">
    <div class="col-md-8">
        <form method="get" asp-action="Catalog" class="input-group">
            <input type="text" name="search" class="form-control" placeholder="Cari brand atau model..." value="@ViewBag.SearchQuery">
            <button type="submit" class="btn btn-pirate">
                <i class="fas fa-search"></i> Cari
            </button>
        </form>
    </div>
    <div class="col-md-4">
        <select class="form-control" onchange="window.location.href='/Customer/Catalog?category=' + this.value">
            <option value="">Semua Kategori</option>
            @foreach (var cat in ViewBag.Categories)
            {
                <option value="@cat" selected="@(ViewBag.SelectedCategory == cat)">@cat</option>
            }
        </select>
    </div>
</div>

<!-- Motors Grid -->
@if (Model.Count == 0)
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i> Tidak ada motor ditemukan.
    </div>
}
else
{
    <div class="row g-4">
        @foreach (var motor in Model)
        {
            <div class="col-md-3">
                <div class="card h-100 motor-card">
                    @if (!string.IsNullOrEmpty(motor.ImageUrl))
                    {
                        <img src="@motor.ImageUrl" class="card-img-top" alt="@motor.Brand @motor.Model" style="height: 300px; object-fit: cover;">
                    }
                    else
                    {
                        <div style="height: 300px; background: linear-gradient(135deg, #ff6b35 0%, #f7931e 100%); display: flex; align-items: center; justify-content: center;">
                            <i class="fas fa-motorcycle fa-5x text-white"></i>
                        </div>
                    }
                    <div class="card-body d-flex flex-column">
                        <span class="badge bg-info mb-2 align-self-start">@motor.Category</span>
                        <h5 class="card-title">@motor.Brand @motor.Model</h5>
                        <p class="card-text text-muted mb-2">
                            <small><i class="fas fa-calendar"></i> @motor.Year | <i class="fas fa-tachometer-alt"></i> @motor.EngineCapacity CC</small>
                        </p>
                        <p class="card-text flex-grow-1">
                            @(motor.Description.Length > 100 ? motor.Description.Substring(0, 100) + "..." : motor.Description)
                        </p>
                        <div class="mt-auto">
                            <h4 class="text-success mb-3">Rp @motor.Price.ToString("N0")</h4>
                            @if (motor.Stock > 0)
                            {
                                <div class="d-grid gap-2">
                                    <a asp-action="MotorDetail" asp-route-id="@motor.Id" class="btn btn-pirate">
                                        <i class="fas fa-eye"></i> Lihat Detail
                                    </a>
                                </div>
                            }
                            else
                            {
                                <button class="btn btn-secondary w-100" disabled>
                                    <i class="fas fa-times"></i> Stok Habis
                                </button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
