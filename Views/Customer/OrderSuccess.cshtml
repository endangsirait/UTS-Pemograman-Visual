@model Dealermotor.Models.Order
@{
    ViewData["Title"] = "Pesanan Berhasil";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<div class="customer-card text-center">
    <div class="mb-4">
        <i class="fas fa-check-circle fa-5x text-success"></i>
    </div>

    <h2 class="text-success mb-3">ðŸŽ‰ Pesanan Berhasil!</h2>
    <p class="lead mb-4">Terima kasih! Pesanan Anda telah berhasil dibuat.</p>

    <div class="card border-success mb-4" style="max-width: 500px; margin: 0 auto;">
        <div class="card-body">
            <p class="mb-2"><strong>Order ID:</strong></p>
            <h5 class="text-primary mb-3">#@Model.Id.Substring(0, 12)</h5>

            <p class="mb-2"><strong>Total Pembayaran:</strong></p>
            <h4 class="text-success mb-3">Rp @Model.TotalAmount.ToString("N0")</h4>

            <p class="mb-2"><strong>Status:</strong></p>
            <span class="badge bg-warning">@Model.Status</span>
        </div>
    </div>

    <div class="alert alert-info" style="max-width: 600px; margin: 0 auto 20px;">
        <i class="fas fa-info-circle"></i> Pesanan Anda sedang diproses. Anda dapat melacak status pesanan di menu
        "Pesanan Saya".
    </div>

    <div class="d-flex gap-2 justify-content-center">
        <a asp-action="MyOrders" class="btn btn-pirate btn-lg">
            <i class="fas fa-shopping-bag"></i> Lihat Pesanan Saya
        </a>
        <a asp-action="Catalog" class="btn btn-secondary btn-lg">
            <i class="fas fa-motorcycle"></i> Lanjut Belanja
        </a>
    </div>
</div>