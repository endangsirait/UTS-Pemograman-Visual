@model Dealermotor.Models.Motor
@{
    ViewData["Title"] = $"{Model.Brand} {Model.Model}";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<div class="customer-card">
    <div class="row">
        <div class="col-md-4">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" class="img-fluid rounded shadow" alt="@Model.Brand @Model.Model" style="width: 100%; border: 3px solid var(--motor-orange);">
            }
            else
            {
                <div style="height: 400px; background: linear-gradient(135deg, var(--motor-dark) 0%, #2d2d2d 100%); display: flex; align-items: center; justify-content: center; border-radius: 10px; border: 3px solid var(--motor-orange);">
                    <i class="fas fa-motorcycle fa-5x" style="color: var(--motor-orange);"></i>
                </div>
            }
        </div>

        <div class="col-md-8">
            <span class="badge bg-info mb-2" style="font-size: 1rem; padding: 8px 15px;">@Model.Category</span>
            <h2 class="mb-3" style="color: var(--motor-orange); font-weight: bold; text-shadow: 2px 2px 4px rgba(0,0,0,0.5);">@Model.Brand @Model.Model</h2>
            
            <p class="mb-3" style="color: white;">
                <i class="fas fa-calendar" style="color: var(--motor-orange);"></i> 
                <strong style="color: var(--motor-orange);">Tahun:</strong> @Model.Year
            </p>
            <p class="mb-3" style="color: white;">
                <i class="fas fa-tachometer-alt" style="color: var(--motor-orange);"></i> 
                <strong style="color: var(--motor-orange);">Kapasitas Mesin:</strong> @Model.EngineCapacity CC
            </p>
            <p class="mb-3" style="color: white;">
                <i class="fas fa-cog" style="color: var(--motor-orange);"></i> 
                <strong style="color: var(--motor-orange);">Transmisi:</strong> @Model.Transmission
            </p>
            <p class="mb-3" style="color: white;">
                <i class="fas fa-gas-pump" style="color: var(--motor-orange);"></i> 
                <strong style="color: var(--motor-orange);">Bahan Bakar:</strong> @Model.FuelType
            </p>
            <p class="mb-3" style="color: white;">
                <i class="fas fa-palette" style="color: var(--motor-orange);"></i> 
                <strong style="color: var(--motor-orange);">Warna:</strong> @Model.Color
            </p>
            <p class="mb-3" style="color: white;">
                <i class="fas fa-tag" style="color: var(--motor-orange);"></i> 
                <strong style="color: var(--motor-orange);">Tipe:</strong> @Model.Type
            </p>
            @if (Model.Mileage > 0)
            {
                <p class="mb-3" style="color: white;">
                    <i class="fas fa-road" style="color: var(--motor-orange);"></i> 
                    <strong style="color: var(--motor-orange);">Kilometer:</strong> @Model.Mileage.ToString("N0") km
                </p>
            }

            <h3 class="mb-3" style="color: #4caf50; font-weight: bold;">Rp @Model.Price.ToString("N0")</h3>

            <div class="mb-4">
                @if (Model.Stock > 10)
                {
                    <span class="badge bg-success" style="font-size: 1rem; padding: 8px 15px;">
                        <i class="fas fa-check"></i> Stok Tersedia (@Model.Stock)
                    </span>
                }
                else if (Model.Stock > 0)
                {
                    <span class="badge bg-warning" style="font-size: 1rem; padding: 8px 15px; color: var(--motor-dark);">
                        <i class="fas fa-exclamation"></i> Stok Terbatas (@Model.Stock)
                    </span>
                }
                else
                {
                    <span class="badge bg-danger" style="font-size: 1rem; padding: 8px 15px;">
                        <i class="fas fa-times"></i> Stok Habis
                    </span>
                }
            </div>

            @if (Model.Stock > 0)
            {
                <form method="post" asp-action="AddToCart" asp-controller="Customer">
                    <input type="hidden" name="motorId" value="@Model.Id" />
                    <div class="row mb-3">
                        <div class="col-md-3">
                            <label class="form-label" style="color: var(--motor-orange);">Jumlah:</label>
                            <input type="number" name="quantity" class="form-control" value="1" min="1" max="@Model.Stock" />
                        </div>
                    </div>
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-pirate btn-lg">
                            <i class="fas fa-cart-plus"></i> Tambah ke Keranjang
                        </button>
                        <a asp-action="Catalog" class="btn btn-treasure btn-lg">
                            <i class="fas fa-arrow-left"></i> Kembali
                        </a>
                    </div>
                </form>
            }
            else
            {
                <div class="d-flex gap-2">
                    <button class="btn btn-secondary btn-lg" disabled>
                        <i class="fas fa-times"></i> Stok Habis
                    </button>
                    <a asp-action="Catalog" class="btn btn-treasure btn-lg">
                        <i class="fas fa-arrow-left"></i> Kembali
                    </a>
                </div>
            }
        </div>
    </div>

    <hr class="my-4" style="border-color: var(--motor-orange);">

    <h4 style="color: var(--motor-orange); font-weight: bold; margin-bottom: 20px;">
        <i class="fas fa-info-circle"></i> Deskripsi
    </h4>
    <p style="color: white; line-height: 1.8; text-align: justify;">@Model.Description</p>
</div>

