@model List<Dealermotor.Models.User>
@{
    ViewData["Title"] = "Kelola User";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="admin-card">
    <div class="admin-card-header">
        <h4><i class="fas fa-users"></i> Daftar User</h4>
    </div>

    <div class="admin-table">
        <table class="table table-hover mb-0">
            <thead>
                <tr>
                    <th>Nama</th>
                    <th>Email</th>
                    <th>Username</th>
                    <th>Telepon</th>
                    <th>Role</th>
                    <th>Terdaftar</th>
                    <th>Aksi</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td><strong>@user.FullName</strong></td>
                        <td>@user.Email</td>
                        <td>@user.Username</td>
                        <td>@user.PhoneNumber</td>
                        <td>
                            @if (user.Role == "Admin")
                            {
                                <span class="badge bg-danger">Admin</span>
                            }
                            else
                            {
                                <span class="badge bg-primary">Customer</span>
                            }
                        </td>
                        <td>@user.CreatedAt.ToString("dd MMM yyyy")</td>
                        <td>
                            <form method="post" asp-action="ToggleUserRole" class="d-inline">
                                <input type="hidden" name="userId" value="@user.Id" />
                                <button type="submit" class="btn btn-sm btn-warning" title="Toggle Role">
                                    <i class="fas fa-sync"></i>
                                </button>
                            </form>

                            <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-sm btn-danger"
                                onclick="return confirm('Yakin ingin menghapus user ini?')">
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>