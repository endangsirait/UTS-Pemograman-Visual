@model Dealermotor.Models.Motor
@{
    ViewData["Title"] = "Tambah Motor Baru";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="admin-card">
    <div class="admin-card-header">
        <h4><i class="fas fa-plus"></i> Tambah Motor Baru</h4>
        <a asp-action="Motors" class="btn btn-admin-secondary">
            <i class="fas fa-arrow-left"></i> Kembali
        </a>
    </div>

    <form method="post" asp-action="CreateMotor">
        <div class="row">
            <div class="col-md-6">
                <div class="admin-form-group">
                    <label class="admin-form-label">Brand *</label>
                    <input type="text" name="Brand" class="admin-form-control" placeholder="Contoh: Honda, Yamaha, Kawasaki" required />
                </div>
            </div>

            <div class="col-md-6">
                <div class="admin-form-group">
                    <label class="admin-form-label">Model *</label>
                    <input type="text" name="Model" class="admin-form-control" placeholder="Nama model" required />
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <div class="admin-form-group">
                    <label class="admin-form-label">Tahun *</label>
                    <input type="text" name="Year" class="admin-form-control" placeholder="2024" required />
                </div>
            </div>

            <div class="col-md-4">
                <div class="admin-form-group">
                    <label class="admin-form-label">Kategori *</label>
                    <select name="Category" class="admin-form-control" required>
                        <option value="">Pilih Kategori</option>
                        <option value="Sport">Sport</option>
                        <option value="Cruiser">Cruiser</option>
                        <option value="Scooter">Scooter</option>
                        <option value="Naked">Naked</option>
                        <option value="Touring">Touring</option>
                        <option value="Off-Road">Off-Road</option>
                        <option value="Classic">Classic</option>
                    </select>
                </div>
            </div>

            <div class="col-md-4">
                <div class="admin-form-group">
                    <label class="admin-form-label">Tipe *</label>
                    <select name="Type" class="admin-form-control" required>
                        <option value="">Pilih Tipe</option>
                        <option value="Sport">Sport</option>
                        <option value="Cruiser">Cruiser</option>
                        <option value="Scooter">Scooter</option>
                        <option value="Naked">Naked</option>
                        <option value="Touring">Touring</option>
                        <option value="Off-Road">Off-Road</option>
                        <option value="Classic">Classic</option>
                    </select>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <div class="admin-form-group">
                    <label class="admin-form-label">Kapasitas Mesin (CC) *</label>
                    <input type="number" name="EngineCapacity" class="admin-form-control" placeholder="150" min="0" required />
                </div>
            </div>

            <div class="col-md-4">
                <div class="admin-form-group">
                    <label class="admin-form-label">Transmisi *</label>
                    <select name="Transmission" class="admin-form-control" required>
                        <option value="">Pilih Transmisi</option>
                        <option value="Manual">Manual</option>
                        <option value="Automatic">Automatic</option>
                        <option value="CVT">CVT</option>
                    </select>
                </div>
            </div>

            <div class="col-md-4">
                <div class="admin-form-group">
                    <label class="admin-form-label">Bahan Bakar *</label>
                    <select name="FuelType" class="admin-form-control" required>
                        <option value="">Pilih Bahan Bakar</option>
                        <option value="Bensin">Bensin</option>
                        <option value="Listrik">Listrik</option>
                    </select>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <div class="admin-form-group">
                    <label class="admin-form-label">Warna *</label>
                    <input type="text" name="Color" class="admin-form-control" placeholder="Hitam, Merah, dll" required />
                </div>
            </div>

            <div class="col-md-4">
                <div class="admin-form-group">
                    <label class="admin-form-label">Kilometer</label>
                    <input type="number" name="Mileage" class="admin-form-control" placeholder="0" min="0" />
                </div>
            </div>

            <div class="col-md-4">
                <div class="admin-form-group">
                    <label class="admin-form-label">Harga (Rp) *</label>
                    <input type="number" name="Price" class="admin-form-control" placeholder="0" min="0" required />
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="admin-form-group">
                    <label class="admin-form-label">Stok *</label>
                    <input type="number" name="Stock" class="admin-form-control" placeholder="0" min="0" required />
                </div>
            </div>

            <div class="col-md-6">
                <div class="admin-form-group">
                    <label class="admin-form-label">URL Gambar Motor</label>
                    <input type="url" name="ImageUrl" class="admin-form-control" placeholder="https://example.com/motor.jpg" />
                    <small class="text-muted">Opsional: Link gambar motor</small>
                </div>
            </div>
        </div>

        <div class="admin-form-group">
            <label class="admin-form-label">Deskripsi *</label>
            <textarea name="Description" class="admin-form-control" rows="5"
                placeholder="Deskripsi singkat tentang motor..." required></textarea>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-admin-primary">
                <i class="fas fa-save"></i> Simpan Motor
            </button>
            <a asp-action="Motors" class="btn btn-secondary">
                <i class="fas fa-times"></i> Batal
            </a>
        </div>
    </form>
</div>

